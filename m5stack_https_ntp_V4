void setup() {
 
  Serial.begin(115200);
  delay(1000);
   
  M5.begin(); //Init M5Core. Initialize M5Core
  M5.Power.begin(); //Init Power module. Initialize the power module

  M5.Lcd.setTextSize(1); // задать размер текста
  
  WiFi.begin(ssid, password); 
 
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi");
    M5.Lcd.clear();
    M5.Lcd.setTextSize(2);
    M5.Lcd.print("Connecting to WiFi");
  }
 
  Serial.println("Connected to the WiFi network");

  // запуск датчика и проверка на работоспособность
  status = bme.begin(0x76); 
  if (!status) {
    Serial.println("Could not find a valid BME280 sensor, check wiring!");
    M5.Lcd.clear();
    M5.Lcd.setTextSize(2);
    M5.Lcd.print("Could not find a valid BME280 sensor");
    while (1);
  }

  //M5.setWakeupButton(BUTTON_A_PIN);

  tickerSetHigh.attach_ms(10000, printHttps);
  tickerSetLow.attach_ms(500, printBME);
  tickerSetTime.attach_ms(1000, printNTP); 

  timeClient.begin();

  M5.Lcd.clear();
}

void loop() {
  //if (M5.BtnA.wasPressed()) {
  //  M5.powerOFF();
  //}
  if(M5.BtnA.wasPressed()) {

  }

  if(M5.BtnB.wasPressed())
  {

  }

  if(M5.BtnC.wasPressed())
  {

  }

  M5.update();
}

void printBME() {
  temp = bme.readTemperature();
  pres = bme.readPressure() / 100.0F * 0.75006375541921;
  alt = bme.readAltitude(SEALEVELPRESSURE_HPA);

  printDisplay();    
}

void printHttps() {
  if ((WiFi.status() == WL_CONNECTED)) { //Check the current connection status
 
    HTTPClient http;

    // postMessage = "status=" + ADCData + "&station=" + station;
    
    http.begin("https://admin.subbnet.ru/api/post", root_ca); //Specify the URL and certificate
    http.addHeader("Content-Type", "application/x-www-form-urlencoded", false, true); 
    //http.addHeader("dataType", "text"); 
    
    int httpCode = http.POST("userId=" + String(temp, 3) + "&userName=" + String(pres, 3));                                                  //Make the request
 
    if (httpCode > 0) { //Check for the returning code
 
        String payload = http.getString();
        Serial.println(httpCode);
        Serial.println(payload);
    }
     
    else {
      Serial.println("Error on HTTP request");
    }
 
    http.end(); //Free the resources
  }  


  printSerial();
}

void printNTP() {
  timeClient.update();

  M5.Lcd.setCursor(20, 10);
  M5.Lcd.setTextSize(6);
  M5.Lcd.setTextColor(TFT_YELLOW, TFT_BLACK);
  M5.Lcd.print(timeClient.getFormattedTime());
}

void printDisplay() {
  //M5.Lcd.clear();
  //M5.Lcd.fillScreen(BLACK);
  M5.Lcd.setTextSize(4);
  M5.Lcd.setCursor(10, 80);
  M5.Lcd.print(String(temp, 1) + " *C");
  M5.Lcd.setCursor(10, 120);
  M5.Lcd.print(String(pres, 1) + " mm");
}

void printSerial() {
  Serial.print("Temperature = ");
  Serial.print(temp);
  Serial.println(" *C");

  Serial.print("Pressure = ");
  Serial.print(pres);
  Serial.println(" mm ртст");

  Serial.print("Approx. Altitude = ");
  Serial.print(alt);
  Serial.println(" m");

  Serial.println();
}
